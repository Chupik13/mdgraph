{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mdgraph",
  "version": "0.1.0",
  "identifier": "com.minta.mdgraph",
  "build": {
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build:vite",
    "devUrl": "http://localhost:1421",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "mdgraph",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "fullscreen": false,
        "resizable": true,
        "alwaysOnTop": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
